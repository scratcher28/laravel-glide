{
    "name": "spatie/laravel-glide",
    "description": "Easily convert images with Glide",
    "homepage": "https://github.com/spatie/laravel-glide",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be"
        }
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "~5.8.0|^6.0",
        "scratcher28/glide": "dev-master"

    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "orchestra/testbench": "~3.8.0|^4.0"
    },
    "autoload": {
        "psr-4": {
            "Spatie\\Glide\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Spatie\\Glide\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Spatie\\Glide\\GlideServiceProvider"
            ],
            "aliases": {
                "GlideImage": "Spatie\\Glide\\GlideImageFacade"
            }
        }
    }
}
